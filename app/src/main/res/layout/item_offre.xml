<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="130sp"
    android:layout_margin="10sp"
    android:background="@drawable/item_order"
    android:orientation="horizontal"
    android:padding="5sp">

    <!--<LinearLayout-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="wrap_content"-->
    <!--    android:orientation="horizontal">-->

    <!--</LinearLayout>-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="7sp"
        android:padding="5sp">

        <ImageView
            android:id="@+id/imgOffre"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5sp"
        android:visibility="visible">

        <TextView
            android:id="@+id/nameOffre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3sp"
            android:fontFamily="@font/pierce"
            android:text="Offre 1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/descOffre"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="1sp"
            android:ellipsize="end"
            android:fontFamily="@font/hoyle"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="desc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/priceOffre"
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:layout_marginBottom="1sp"
            android:fontFamily="@font/lato_light"
            android:gravity="center_vertical"
            android:text="400.00"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateEndOffre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2021-12-01"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1.80"
        android:src="@drawable/ic_favorite_border"
        android:visibility="visible" />
</LinearLayout>