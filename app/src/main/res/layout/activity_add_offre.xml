<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    tools:context=".Activities.AddOffreActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameOffre"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundededittext"
                android:fontFamily="@font/hoyle"
                android:hint="Titre de l'offre"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/descOffre"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundededittext"
                android:fontFamily="@font/hoyle"
                android:hint="Description de l'offre"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundededittext"
                android:fontFamily="@font/hoyle"
                android:hint="Quantité"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/priceOffre"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/roundededittext"
                android:fontFamily="@font/hoyle"
                android:hint="Prix"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/date1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="3"
                    android:src="@drawable/ic_date" />

                <TextView
                    android:id="@+id/dateBeginOffre"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/roundededittext"
                    android:fontFamily="@font/hoyle"
                    android:gravity="center"
                    android:hint="A partir de"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="3"
                    android:src="@drawable/ic_date" />

                <TextView
                    android:id="@+id/dateEndOffre"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/roundededittext"
                    android:fontFamily="@font/hoyle"
                    android:hint="Délai"
                    android:inputType="date"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageOffre"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:layout_marginTop="30sp"
                android:src="@drawable/ic_image" />


            <android.widget.Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="35sp"
                android:background="@drawable/roundedbutton"
                android:drawableLeft="@drawable/ic_add"
                android:fontFamily="@font/hoyle"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Ajouter"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>