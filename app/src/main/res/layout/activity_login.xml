<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:layout_marginBottom="65sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180sp"
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:scaleType="center"
                    android:src="@drawable/ic_launcher_background" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_marginBottom="5sp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/edit_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:background="@drawable/roundededittext"
                    android:ems="10"
                    android:fontFamily="@font/hoyle"
                    android:gravity="left|center_vertical"
                    android:hint="Email ou Nom d'utilisateur"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="25sp" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:background="@drawable/roundededittext"
                    android:ems="10"
                    android:fontFamily="@font/hoyle"
                    android:gravity="left|center_vertical"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:paddingLeft="25sp" />

                <android.widget.Button
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="35sp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/purple_700"
                    android:drawableRight="@drawable/ic_login"
                    android:paddingLeft="35sp"
                    android:paddingRight="25sp"
                    android:text="Se connecter"
                    android:textColor="@color/white" />

                <android.widget.Button
                    android:id="@+id/to_new_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="35sp"
                    android:background="@drawable/roundedbutton"
                    android:backgroundTint="@color/blue"
                    android:drawableRight="@drawable/ic_person_add"
                    android:paddingLeft="35sp"
                    android:paddingRight="25sp"
                    android:text="Créer un compte"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/forgetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="نسيت كلمة المرور ؟"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>